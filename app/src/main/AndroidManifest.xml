<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.patient_evolution">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.patient_evolution.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.patient_evolution.activity.AuthorizationActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.patient_evolution.activity.EvolutionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.patient_evolution.activity.EmailActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.patient_evolution.activity.AllActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
